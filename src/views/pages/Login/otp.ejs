<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #f4f6f9;
        }

        .login-container {
            margin-top: 10%;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .password-wrapper {
            position: relative;
        }


        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px;
            border-radius: 5px;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }

        a:hover {
            text-decoration: underline;
        }

        .password-wrapper i {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            font-size: 1.2rem;
            color: #6c757d;
        }
    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="col-md-4 login-container">
            <h3 class="text-center mb-4">Login</h3>
            <form method="POST" action="/login">
                <div class="form-group position-relative">
                    <label for="mobileEmail">Mobile Number or Email</label>
                    <input type="text" class="form-control" id="mobileEmail" name="mobile" required
                        placeholder="Enter mobile number or email">
                </div>
                <div class="form-group password-wrapper mt-3">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required
                        placeholder="Enter password">
                    <i class="fas fa-eye" id="togglePassword"></i>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4 w-100">Login</button>
                <p class="text-center mt-3"><a href="#">Forgot Password?</a></p>
            </form>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("togglePassword").addEventListener("click", function () {
                const passwordField = document.getElementById("password");
                if (passwordField.type === "password") {
                    passwordField.type = "text";
                    this.classList.replace("fa-eye", "fa-eye-slash");
                } else {
                    passwordField.type = "password";
                    this.classList.replace("fa-eye-slash", "fa-eye");
                }
            });
        });

    </script>
</body>

</html>