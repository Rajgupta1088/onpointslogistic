<!-- Bootstrap + FontAwesome + DataTable CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet">

<style>
    .btn-pink {
        background-color: #e91e63;
        color: white;
    }

    .btn-pink:hover {
        background-color: #c2185b;
    }

    .table th,
    .table td {
        vertical-align: middle;
        text-align: center;
    }

    .modal-title {
        font-weight: bold;
    }

    /* Increase CKEditor Height */
    .ck-editor__editable {
        min-height: 300px !important;
    }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">ðŸ“¢ Blog Management</h3>
        <button class="btn btn-pink" id="addBlogBtn">
            <i class="fas fa-plus"></i> Add Blog
        </button>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <table id="blogTable" class="table table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Blog Title</th>
                        <th>Banner Image</th>
                        <th>Poster Image</th>
                        <th>Description</th>
                        <th>Tags</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<!-- Add/Edit Blog Modal -->
<div class="modal fade" id="blogModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="blogForm" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="blog_id" id="blog_id">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">Add Blog</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Blog Title</label>
                        <input type="text" class="form-control" name="blog_title" id="blog_title" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Banner Image</label>
                        <input type="file" class="form-control" name="banner_image" id="banner_image" accept="image/*"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Poster Image</label>
                        <input type="file" class="form-control" name="poster_image" id="poster_image" accept="image/*"
                            required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Blog Status</label>
                        <select class="form-select" name="blog_status" id="blog_status" required>
                            <option value="">Select Status</option>
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Blog Tags</label>
                        <input type="text" class="form-control" name="blog_tags" id="blog_tags"
                            placeholder="Comma separated tags" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Blog Description</label>
                        <textarea class="form-control" name="blog_description" id="blog_description"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100" id="submitBtn">Save Blog</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JS dependencies -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

<script>
    $(document).ready(function () {
        let blogEditor;
        const blogModal = new bootstrap.Modal(document.getElementById('blogModal'));

        // Initialize CKEditor
        ClassicEditor.create(document.querySelector('#blog_description'), {
            toolbar: ['heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', '|', 'blockQuote', 'undo', 'redo']
        }).then(editor => {
            blogEditor = editor;
        }).catch(error => console.error(error));

        // Initialize DataTable
        let table = $('#blogTable').DataTable({
            processing: true,
            serverSide: true,
            ajax: { url: '/blogsList', type: 'GET' },  // âœ… Changed POST to GET
            columns: [
                { data: null, render: (data, type, row, meta) => meta.row + meta.settings._iDisplayStart + 1 },
                { data: 'title' },
                { data: 'banner_image', render: (data) => data ? `<img src="/uploads/blogs/${data}" class="img-thumbnail" width="80">` : '' },
                { data: 'poster_image', render: (data) => data ? `<img src="/uploads/blogs/${data}" class="img-thumbnail" width="80">` : '' },
                { data: 'description' },
                { data: 'tags' },
                { data: 'status', render: (data) => data === "Active" ? '<span class="badge bg-success">Active</span>' : '<span class="badge bg-danger">Inactive</span>' },
                {
                    data: null,
                    render: (data, type, row) => `
                    <button class="btn btn-sm btn-primary me-2 editBlogBtn" data-blog='${JSON.stringify(row)}'>
                        <i class="fas fa-edit"></i> Edit
                    </button>
                    <button class="btn btn-sm btn-danger delBlogBtn" data-id='${row._id}'>
                        <i class="fas fa-trash"></i> Delete
                    </button>`
                }
            ]
        });

        // Add Blog Button
        $('#addBlogBtn').click(() => {
            resetForm();
            $('#blogModal .modal-title').text('Add Blog');
            $('#submitBtn').text('Save Blog');
            $('#blogForm').attr('action', '/saveBlog');  // âœ… Ensure correct action
            blogModal.show();
        });

        // Edit Blog Button Click
        $('#blogTable').on('click', '.editBlogBtn', function () {
            let blog = $(this).data('blog');
            $('#blog_id').val(blog._id);
            $('#blog_title').val(blog.title);
            $('#blog_status').val(blog.status);
            $('#blog_tags').val(blog.tags);
            if (blogEditor) {
                blogEditor.setData(blog.description);
            }

            // âœ… Remove required attribute for file input in edit mode
            $('#banner_image').removeAttr('required');
            $('#poster_image').removeAttr('required');

            $('#blogModal .modal-title').text('Edit Blog');
            $('#submitBtn').text('Update Blog');
            $('#blogForm').attr('action', `/updateBlog/${blog._id}`);  // âœ… Correct URL
            blogModal.show();
        });

        // AJAX Form Submission for Blog Save/Update
        $('#blogForm').submit(function (e) {
            e.preventDefault();
            let formData = new FormData(this);

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    alert('Blog saved successfully!');
                    blogModal.hide();
                    table.ajax.reload();  // âœ… Reload DataTable
                },
                error: function (xhr) {
                    alert('Error: ' + xhr.responseJSON.message);
                }
            });
        });

        // Delete Blog
        $('#blogTable').on('click', '.delBlogBtn', function () {
            if (confirm('Are you sure you want to delete this blog?')) {
                let blogId = $(this).data('id');
                $.ajax({
                    url: `/deleteBlog/${blogId}`,
                    type: 'DELETE',
                    success: function () {
                        alert('Blog deleted successfully!');
                        table.ajax.reload();
                    },
                    error: function (xhr) {
                        alert('Error: ' + xhr.responseJSON.message);
                    }
                });
            }
        });

        // Reset Form
        function resetForm() {
            $('#blogForm')[0].reset();
            $('#blog_id').val('');
            $('#banner_image').attr('required', true);
            $('#poster_image').attr('required', true);
            if (blogEditor) {
                blogEditor.setData('');
            }
        }
    });

</script>