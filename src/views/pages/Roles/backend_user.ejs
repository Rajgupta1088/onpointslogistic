<!-- JS dependencies -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script>

    $(document).ready(function () {
        const userModal = new bootstrap.Modal(document.getElementById('addUserModal'));

        let table = $('#artistTable').DataTable({
            processing: true,
            serverSide: true,
            ajax: { url: '/backendUserManagement/getList', type: 'POST' },
            columns: [
                { data: null, render: (data, type, row, meta) => meta.row + meta.settings._iDisplayStart + 1 },
                { data: 'name' },
                { data: 'email' },
                { data: 'mobile' },
                {
                    data: null,
                    render: (data, type, row) => `
                        <button class="btn btn-sm btn-primary me-2 editUserBtn"  data-id='${row._id}'>
                            <i class="fas fa-edit"></i> Edit
                        </button>
                        <button class="btn btn-sm btn-danger delUserBtn" data-id='${row._id}'>
                            <i class="fas fa-trash"></i> Delete
                        </button>`
                }
            ]
        });
        $('#artistTable').on('click', '.editUserBtn', function () {
            let id = $(this).data('id'); // Get ID

            $.ajax({
                url: "/rolesManagement/editRole",
                type: "POST",
                data: { id: id }, // Send ID in the request body
                dataType: "json",
                success: function (response) {
                    if (response.success) {
                        let data = response.data;

                        // Fill General Fields
                        $('#user_id').val(data._id);  // Hidden field for user ID
                        $('#name').val(data.name);
                        $('#email').val(data.email);
                        $('#mobile').val(data.mobile);
                        $('#admin_type').val(data.admin_type);

                        // Country & City Access
                        $('#country_access').prop('checked', data.country_access);
                        $('#city_access').prop('checked', data.city_access);

                        // Reset all permission checkboxes first (to avoid old data issues)
                        $('input[name^="permissions"]').prop('checked', false);

                        // Populate Permissions Dynamically
                        if (data.permissions && Array.isArray(data.permissions)) {
                            data.permissions.forEach(permission => {
                                let module = permission.module;

                                // Ensure the checkboxes exist before setting values
                                if ($(`input[name="permissions[${module}][add]"]`).length) {
                                    $(`input[name="permissions[${module}][add]"]`).prop('checked', permission.add);
                                    $(`input[name="permissions[${module}][edit]"]`).prop('checked', permission.edit);
                                    $(`input[name="permissions[${module}][delete]"]`).prop('checked', permission.delete);
                                    $(`input[name="permissions[${module}][export]"]`).prop('checked', permission.export);
                                }
                            });
                        }

                        // Show the modal
                        userModal.show();
                    } else {
                        alert("Failed to fetch user details.");
                    }
                },
                error: function () {
                    alert("Error fetching user data.");
                }
            });
        });


        $('#addUserModal').on('hidden.bs.modal', function () {
            resetForm();
        });

        function resetForm() {
            $('#userForm')[0].reset();
            $('#user_id').val('');
            $('#addUserModal .modal-title').text('Add User');
            $('#submitBtn').text('Add User');
            $('#userForm').attr('action', '/saveUserdata');
        }

    });
</script>