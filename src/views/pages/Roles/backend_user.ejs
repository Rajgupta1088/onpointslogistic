                                <td><input type="checkbox" name="permissions[userManagement][edit]"></td>
                                <td><input type="checkbox" name="permissions[userManagement][delete]"></td>
                                <td><input type="checkbox" name="permissions[userManagement][export]"></td>
                            </tr>
                            <tr>
                                <td>Role Management</td>
                                <td><input type="checkbox" name="permissions[rolesManagement][add]"></td>
                                <td><input type="checkbox" name="permissions[rolesManagement][edit]"></td>
                                <td><input type="checkbox" name="permissions[rolesManagement][delete]"></td>
                                <td><input type="checkbox" name="permissions[rolesManagement][export]"></td>
                            </tr>
                            <tr>
                                <td>Backend User Management</td>
                                <td><input type="checkbox" name="permissions[backendUserManagement][add]"></td>
                                <td><input type="checkbox" name="permissions[backendUserManagement][edit]"></td>
                                <td><input type="checkbox" name="permissions[backendUserManagement][delete]"></td>
                                <td><input type="checkbox" name="permissions[backendUserManagement][export]"></td>
                            </tr>
                            <tr>
                                <td>Fleet Management</td>
                                <td><input type="checkbox" name="permissions[fleetManagement][add]"></td>
                                <td><input type="checkbox" name="permissions[fleetManagement][edit]"></td>
                                <td><input type="checkbox" name="permissions[fleetManagement][delete]"></td>
                                <td><input type="checkbox" name="permissions[fleetManagement][export]"></td>
                            </tr>
                            <tr>
                                <td>Order Management</td>
                                <td><input type="checkbox" name="permissions[orderManagement][add]"></td>
                                <td><input type="checkbox" name="permissions[orderManagement][edit]"></td>
                                <td><input type="checkbox" name="permissions[orderManagement][delete]"></td>
                                <td><input type="checkbox" name="permissions[orderManagement][export]"></td>
